<div class="container-fluid">
    <div class="container">
        <div class="row g-4 d-flex flex-row">
            <table class="table">
                <thead>
                    <tr class="tuble">
                        <th>Id</th>
                        <th>Ảnh đại diện</th>
                        <th>Giới tính</th>
                        <th>Họ tên</th>
                        <th>Tên đăng nhập</th>
                        <th>Email</th>
                        <th>Điện thoại</th>
                        <th>Mật khẩu</th>
                        <th>Địa chỉ</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each userData as |user index|}}
                    <tr class="teble">
                        <td>{{user.id}}</td>
                        <td><img src="{{user.avatar}}" alt="avatar" style="width: 100px; height: 100px;" /></td>
                        <td>{{user.gender}}</td>
                        <td>{{user.name}}</td>
                        <td>{{user.username}}</td>
                        <td>{{user.email}}</td>
                        <td>{{user.phone}}</td>
                        <td>{{user.password}}</td>
                        <td>{{user.address}}</td>
                        <td>
                            <button class="btn btn-danger" onclick="deleteProduct('{{user._id}}')">XÓA</button>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>