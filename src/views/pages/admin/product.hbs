                    </tr>
                    </thead>
                    <tbody>
                    {{#each productsData}}
                        <tr>
                            <td>
                                {{#each images}}
                                    <img src="{{this}}" alt="product" style="width: 50px; height: 50px;"/>
                                {{/each}}
                            </td>
                            <td>{{name}}</td>
                            <td>{{rating_average}}</td>
                            <td>{{price}}</td>
                            <td>{{stock}}</td>
                            <td>{{description}}</td>
                            <td>{{size}}</td>
                            <td>
                                {{#each color}}
                                    {{this}}
                                {{/each}}
                            </td>
                            <td>{{qty}}</td>
                            <td>
                                <button class="outline-button" style="border: no-border;"
                                        onclick="editProduct('{{this}}')">
                                    <i class="las la-edit" style="font-size: 24px"></i>
                                </button>
                            </td>
                            <td>
                                <button class="primary-button" onclick="deleteProduct('{{this}}')">
                                    XÓA
                                </button>
                            </td>
                        </tr>
                    {{/each}}
                    </tbody>
                </table>
            {{/if}}
